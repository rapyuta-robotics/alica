«DEFINE Root FOR ConstraintCreator»
«FILE "ConstraintCreator" + ".cpp"-»
			using namespace std;
			
			#include "ConstraintCreator.h"
			#include <iostream>
			
			«FOREACH conditions AS  c»
			#include  "Constraint«p.id».h"
			«ENDFOREACH»
			namespace alica
			{

				ConstraintCreator::ConstraintCreator()
				{
				}

				ConstraintCreator::ConstraintCreator()
				{
				}


				shared_ptr<BasicConstraint> ConstraintCreator::createConstraint(long constraintConfId)
				{
					switch(constraintConfId)
					{
						«FOREACH conditions AS c»
						case «c.id»
							return make_shared<Constraint«c.id»>();
							break;
						«ENDFOREACH»
						default:
						cerr << "ConstraintCreator: Unknown constraint requested: " << constraintConfId << endl;
						throw new exception();
						break;
					}
				}
				
				
			}
	«ENDFILE»
